@{
    ViewData["Title"] = "Home Page";
}
@model List<MediaManager.Entity.Film>
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
@{ 
    foreach(var element in Model)
    {
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-6">
                        <h1>@element.Nom</h1>
                        <h5>Date de sortie : @element.DateSortie?.Year - Durée : @element.DureeEnMinute</h5>
                    </div>
                    <div class="col-lg-6">
                        <h5>Synopsis</h5>
                        <span>@element.Synopsis</span>
                    </div>
                </div>
            </div>
        </div>
    }
}